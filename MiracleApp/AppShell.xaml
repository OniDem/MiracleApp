<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MiracleApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MiracleApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    NavBarIsVisible="False"
    TabBarBackgroundColor="#9F5CC0"
    Shell.PresentationMode="ModalAnimated"
    Shell.TabBarIsVisible="False">

    <TabBar>
        <Tab>
            <ShellContent IsVisible="True" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab>
            <ShellContent  ContentTemplate="{DataTemplate local:SettingsPage}"/>
        </Tab>
        <Tab>
            <ShellContent  ContentTemplate="{DataTemplate local:ProfilePage}"/>
        </Tab>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:NotificationsPage}"/>
        </Tab>
    </TabBar>
</Shell>
