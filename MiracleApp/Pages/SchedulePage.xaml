                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <Grid ColumnDefinitions="90, *">
                                                <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                                    <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                                    <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                                </VerticalStackLayout>
                                                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                                    <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                                    <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                                </VerticalStackLayout>
                                            </Grid>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackLayout>

