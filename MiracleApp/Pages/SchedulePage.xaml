<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleApp.Pages.SchedulePage"
             Shell.TabBarIsVisible="False"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior  StatusBarColor="#8031A7" StatusBarStyle="LightContent"/>
    </ContentPage.Behaviors>
    <Grid BackgroundColor="#8031A7">
        <Image Aspect="Fill" Source="background.png"/>

        <ScrollView >
            <VerticalStackLayout HorizontalOptions="Start" VerticalOptions="Start">
                <VerticalStackLayout  Margin="22,0" >
                    <Label WidthRequest="289" HeightRequest="79" HorizontalOptions="Start">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Miracle" TextColor="#FAE073" FontSize="78" FontFamily="QANELASBLACK"/>
                                <Span Text=":" TextColor="#FAE073" FontSize="74" FontFamily="NEUEMACHINA-BLACK" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Frame BackgroundColor="#1E1E1E" BorderColor="#1E1E1E" CornerRadius="16" Padding="12,0" WidthRequest="293" HeightRequest="54" HorizontalOptions="Start" Margin="0,4">
                        <Label Text="Новоколледж" TextColor="#FAE073" FontSize="42" FontFamily="QANELASBLACK"/>
                    </Frame>
                </VerticalStackLayout>
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0, 24, 0, 0">
                    <HorizontalStackLayout>
                        <Button Text="Главная" x:Name="MainButton" Clicked="MainButton_Clicked" CornerRadius="50" BorderWidth="2" Padding="9, 0, 9, 0" Margin="1, 0, 12, 0" TextColor="#FAE073" BorderColor="#FAE073" FontFamily="QANELASREGULAR" FontSize="24" BackgroundColor="Transparent" HeightRequest="47" WidthRequest="117"/>
                        <Button Text="Расписание" x:Name="ScheduleButton" Clicked="ScheduleButton_Clicked" CornerRadius="50" BorderWidth="2" Padding="9, 0, 9, 0" Margin="0, 0, 12, 0" TextColor="#FAE073" BorderColor="#FAE073" FontFamily="QANELASREGULAR" FontSize="24" BackgroundColor="#9F5CC0" HeightRequest="47" WidthRequest="164"/>
                        <Button Text="Оплата" x:Name="PayButton" Clicked="PayButton_Clicked" CornerRadius="50" BorderWidth="2" Padding="9, 0, 9, 0" Margin="0, 0, 12, 0" TextColor="#FAE073" BorderColor="#FAE073" FontFamily="QANELASREGULAR" FontSize="24" BackgroundColor="Transparent" HeightRequest="47" WidthRequest="113"/>
                        <Button Text="Справки" x:Name="СertificateButton" Clicked="СertificateButton_Clicked" CornerRadius="50" BorderWidth="2" Padding="9, 0, 9, 0" Margin="0, 0, 12, 0" TextColor="#FAE073" BorderColor="#FAE073" FontFamily="QANELASREGULAR" FontSize="24" BackgroundColor="Transparent" HeightRequest="47" WidthRequest="130"/>
                    </HorizontalStackLayout>
                </ScrollView>

                <StackLayout HorizontalOptions="Start" Margin="22, 18, 0, 0" x:Name="CourseChoiceSL">
                    <Label Text="Курс" FontFamily="QANELASBLACK" FontSize="24" TextColor="#FAE073"/>
                    <Frame Margin="0, 12, 0, 0"  CornerRadius="16" BackgroundColor="#9F5CC0" BorderColor="#9F5CC0" Padding="8, 4, 8, 4">
                    <HorizontalStackLayout >
                        <Button x:Name="CourceOneButton" Clicked="CourceOneButton_Clicked" HeightRequest="43" WidthRequest="46" CornerRadius="16" BackgroundColor="#9F5CC0" Text="1" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD"  FontSize="24" TextColor="#FAE073" />
                           <Button x:Name="CourceTwoButton" Clicked="CourceTwoButton_Clicked" HeightRequest="43" WidthRequest="46" CornerRadius="16" BackgroundColor="#9F5CC0" Text="2" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD"  FontSize="24" TextColor="#FAE073"/>
                           <Button x:Name="CourceThreeButton" Clicked="CourceThreeButton_Clicked" HeightRequest="43" WidthRequest="46" CornerRadius="16" BackgroundColor="#9F5CC0" Text="3" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD"  FontSize="24" TextColor="#FAE073"/>
                           <Button x:Name="CourceFourButton" Clicked="CourceFourButton_Clicked" HeightRequest="43" WidthRequest="46" CornerRadius="16" BackgroundColor="#9F5CC0" Text="4" FontFamily="QANELASBOLD" FontSize="24"  TextColor="#FAE073"/>
                       </HorizontalStackLayout>
                   </Frame>
               </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="22, 18, 0, 0" x:Name="DepartmentChoiceSL">
                    <Label Text="Отделение" FontFamily="QANELASBLACK" FontSize="24" TextColor="#FAE073"/>
                    <Frame Margin="0, 12, 0, 0"  CornerRadius="16" BackgroundColor="#9F5CC0" BorderColor="#9F5CC0" Padding="8, 4, 8, 4">
                        <HorizontalStackLayout>
                            <Button x:Name="Department1" Clicked="Department1_Clicked" Text="ЦК" CornerRadius="16" BackgroundColor="#9F5CC0" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button x:Name="Department2" Clicked="Department2_Clicked" Text="ЛО" CornerRadius="16" BackgroundColor="#9F5CC0" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD"  FontSize="24" TextColor="#FAE073"/>
                            <Button x:Name="Department3" Clicked="Department3_Clicked" Text="КИТ" CornerRadius="16" BackgroundColor="#9F5CC0" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button x:Name="Department4" Clicked="Department4_Clicked" Text="БО" CornerRadius="16" BackgroundColor="#9F5CC0" Margin="0, 0, 4, 0" FontFamily="QANELASBOLD"  FontSize="24" TextColor="#FAE073"/>
                            <Button x:Name="Department5" Clicked="Department5_Clicked" Text="ТО" CornerRadius="16" BackgroundColor="#9F5CC0" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                        </HorizontalStackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="22, 18" x:Name="BranchChoiceSL">
                    <Label Text="Специальность" Margin="0, 0, 0, 12" FontFamily="QANELASBLACK" FontSize="24" TextColor="#FAE073"/>
                    <Frame  CornerRadius="16" BackgroundColor="#9F5CC0" BorderColor="#9F5CC0" Padding="8, 10">
                        <Grid RowDefinitions="*, *, *, *, *, *" HorizontalOptions="Fill">
                            <Button Grid.Row="0" x:Name="Branch1" Clicked="Branch1_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Реклама и маркетинг" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button Grid.Row="1" x:Name="Branch2" Clicked="Branch2_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Информационные технологии" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button Grid.Row="2" x:Name="Branch3" Clicked="Branch3_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Социо-культурная деятельность" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button Grid.Row="3" x:Name="Branch4" Clicked="Branch4_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Право и судебное администрирование" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button Grid.Row="4" x:Name="Branch5" Clicked="Branch5_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Предпринимательство" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                            <Button Grid.Row="5" x:Name="Branch6" Clicked="Branch6_Clicked" HorizontalOptions="StartAndExpand" LineBreakMode="TailTruncation" CornerRadius="16" BackgroundColor="Transparent" Text="Дизайн" FontFamily="QANELASBOLD" FontSize="24" TextColor="#FAE073"/>
                        </Grid>
                    </Frame>
                </StackLayout>
                <Button HorizontalOptions="Center" Text="Далее" Padding="32, 10" Margin="24" x:Name="ShowLessonsButton" Clicked="ShowLessonsButton_Clicked" CornerRadius="16" HeightRequest="64" TextColor="#1E1E1E" BackgroundColor="#FAE073" FontFamily="QANELASBLACK" FontSize="24"/>


                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="MondaySL">
                    <Label Text="Понедельник" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="MondayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="TuesdaySL">
                    <Label Text="Вторник" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="TuesdayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="WednesdaySL">
                    <Label Text="Среда" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="WednesdayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="ThursdaySL">
                    <Label Text="Четверг" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="ThursdayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="FridaySL">
                    <Label Text="Пятница" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="FridayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" Opacity="50" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="SaturdaySL">
                    <Label Text="Суббота" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="SaturdayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>

                <StackLayout HorizontalOptions="Start" Margin="0, 18, 0, 0" x:Name="SundaySL">
                    <Label Text="Воскресенье" FontFamily="QANELASBLACK" FontSize="20" Margin="20, 18, 0, 4" TextColor="#FAE073"/>
                    <ListView x:Name="SundayLessonsShowLV" BackgroundColor="#9F5CC0" VerticalScrollBarVisibility="Never" RowHeight="85" HorizontalScrollBarVisibility="Never"  SelectionMode="None" SeparatorColor="#FAE073">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid ColumnDefinitions="90, *">
                                        <VerticalStackLayout Padding="22, 17" Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                                            <Label  Text="{Binding TimeStart}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                            <Label  Text="{Binding TimeEnd}" FontSize="16" TextColor="#FAE073" FontFamily="QANELASBOLD"  HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 20, 0">
                                            <Label Text="{Binding Where}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASBLACK"/>
                                            <Label Text="{Binding Description}" FontSize="20" TextColor="#FAE073" FontFamily="QANELASREGULAR"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>