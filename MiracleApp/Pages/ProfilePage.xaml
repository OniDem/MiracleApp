<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiracleApp.Pages.ProfilePage"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    
    <Grid BackgroundColor="#8031A7">
        <Image Aspect="Fill" Source="background.png"/>

        <ScrollView>
            <VerticalStackLayout >
                <Frame  BackgroundColor="#1E1E1E" BorderColor="#1E1E1E" CornerRadius="16" Margin="22, 106, 23, 0" HeightRequest="178"></Frame>

                <material:TabView BackgroundColor="#1E1E1E" ZIndex="0" Margin="0, 24, 0, 0" CachingStrategy="CacheOnLayout">
                    
                    <material:TabView.TabHeaderItemTemplate>
                            <DataTemplate>
                            <Label HorizontalOptions="Center" Margin="76, 0, 35, 0" Text="{Binding Title}" TextColor="#FAE073" FontSize="20"/>
                            </DataTemplate>
                    </material:TabView.TabHeaderItemTemplate>

                    <material:TabItem Title="Запись на курсы" >
                        <ListView x:Name="ListViewTest" SeparatorColor="#1E1E1E" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <FlexLayout Direction="Row" VerticalOptions="Center">
                                            <Label FlexLayout.Grow="0.5" Text="{Binding LessonName}" FontSize="20" TextColor="#FAE073" Margin="22, 0, 0, 0" VerticalTextAlignment="Center"/>
                                            <Label FlexLayout.Grow="0.2" Text="{Binding LessonDate}"  FontSize="20" TextColor="#FAE073" Margin="5, 0, 5, 0" VerticalTextAlignment="Center"/>
                                            <Label FlexLayout.Grow="0.2" Text="{Binding LessonTime}"  FontSize="20" TextColor="#FAE073" VerticalTextAlignment="Center"/>
                                            <material:CheckBox CornerRadius="50" BorderColor="#FAE073" Color="#FAE073" Margin="0, 0, 26, 0"  VerticalOptions="Center"  StyleClass="CheckRadioButton" IsChecked="{Binding IsChecked}"/>
                                            </FlexLayout>
                                        
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </material:TabItem>

                    <material:TabItem Title="Зачётка">
                        <material:TabItem.Content>
                            <!--Контент-->
                            <Label Text="Tab Content 1"  Margin="60" ZIndex="1"/>
                            
                        </material:TabItem.Content>
                    </material:TabItem>
                </material:TabView>
            </VerticalStackLayout>
        </ScrollView>
        <HorizontalStackLayout HorizontalOptions="Start" VerticalOptions="End" ZIndex="1">
            <ImageButton x:Name="SettingsButton" Clicked="SettingsButton_Clicked" HeightRequest="52" WidthRequest="52" Margin="35, 0, 0, 20"/>
            <ImageButton x:Name="HomeButton" Clicked="HomeButton_Clicked" HeightRequest="52" WidthRequest="52" Margin="35, 0, 0, 20"/>
            <ImageButton x:Name="ProfileButton" Clicked="ProfileButton_Clicked" HeightRequest="52" WidthRequest="52" Margin="35, 0, 0, 20"/>
            <ImageButton HorizontalOptions="Start" Clicked="NotificationButton_Clicked" x:Name="NotificationButton" HeightRequest="52" WidthRequest="52" Margin="35, 0, 35, 20"/>
        </HorizontalStackLayout>
        <Frame VerticalOptions="EndAndExpand" BorderColor="#9F5CC0" BackgroundColor="#9F5CC0" HorizontalOptions="FillAndExpand" Margin="0, 16, 0, 0" HeightRequest="50"/>
    </Grid>
</ContentPage> 